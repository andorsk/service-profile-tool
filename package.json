{
  "name": "service-profile-tool",
  "version": "0.0.1",
  "description": "A tool to manage service profiles",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json && mkdir -p dist/bin && pkg --target node14 dist/cli.js -o dist/bin/cli && pkg --target node14 dist/server.js -o dist/bin/server",
    "build:web": "mkdir -p dist/views && parcel build src/views/index.html --dist-dir dist/views",
    "start": "node dist/index.js",
    "cli": "dist/bin/cli",
    "cli:dev": "ts-node src/cli.ts",
    "web": "dist/bin/web",
    "web:dev": "ts-node src/web.ts",
    "serve:web": "parcel src/views/index.html",
    "serve:hello": "parcel src/views/hello.html"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": ["dist/views/**/*"]
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "ajv": "^8.12.0",
    "typescript": "^5.3.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@noble/hashes": "^1.3.3",
    "@types/express": "^4.17.21",
    "babel-jest": "^29.7.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "parcel": "^2.11.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
